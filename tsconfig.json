{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2021",
        "lib": [
            "es2021",
            "dom"
        ],
        "sourceMap": true,
        "types": [
            "node",
            "reflect-metadata"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist/",
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
